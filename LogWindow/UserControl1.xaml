<UserControl x:Class="LogWindow.LogWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LogWindow"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <RichTextBox x:Name="rtbLogWindow" Background="Black" IsReadOnly="True" AcceptsTab="False" AcceptsReturn="False" BorderBrush="Black" BorderThickness="2" VerticalScrollBarVisibility="Auto">
            <RichTextBox.ContextMenu>
                <ContextMenu>
                    <MenuItem x:Name="miSaveLogToFile" Header = "Save Log to File" Click="miSaveLogToFile_Click"/>
                </ContextMenu>
            </RichTextBox.ContextMenu>
        </RichTextBox> 
    </Grid>
</UserControl>
